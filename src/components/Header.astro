---
import Header from "starlight-theme-galaxy/overrides/Header.astro";
import {TextScaler} from 'astro-nebula-ui';
import {NebulaSlider} from 'astro-nebula-ui';
---

<div class="header-container">
  <Header />
  <div class="controls">
    <NebulaSlider />
    <TextScaler />
  </div>
</div>

<style>
  .header-container {
    position: relative;
  }

  .controls {
    position: absolute;
    top: 50%;
    right: 1rem;
    margin-right: 5rem;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 10;
  }

  @media (max-width: 768px) {
    .controls {
      display: none;
    }
  }
</style>

